	"main": "index.js",
	"private": true,
	"scripts": {
		"build": "NODE_ENV=production concurrently \"npm run build:server\" \"npm run build:client\"",
		"build:client": "webpack --config config/client.config.cjs",
		"build:server": "webpack --config config/server.config.cjs",
		"dev": "yarn watch",
		"format": "prettier --write \"**/*.{js,ts,tsx,md}\"",
		"watch:client": "webpack --config config/client.config.cjs -w",
		"watch:server": "webpack --config config/server.config.cjs -w",
		"watch": "concurrently \"npm run watch:server\" \"npm run watch:client\" \"npm run dev:server\"",
		"dev:server": "nodemon app.js",
		"start": "NODE_ENV=production node app.js"
	},
