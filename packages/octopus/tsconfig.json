{
	"compilerOptions": {
		"lib": ["es2015", "es2016", "es2017", "dom"],
		"strict": true,
		"sourceMap": false,
		"target": "ES6",
    "module": "CommonJS",
		"moduleResolution": "node",
		"jsx": "preserve",
		"esModuleInterop": true,
		"allowSyntheticDefaultImports": true,
		"baseUrl": ".",
		"declarationDir": "compiled",
		"outDir": "compiled",
		"declaration": true,
		"types": ["node"]
	},
	"include": ["src/**/*"]
}
